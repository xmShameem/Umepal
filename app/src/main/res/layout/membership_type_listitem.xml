<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.qiito.toolbar.MainActivity">


<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:weightSum="5"
    android:gravity="center"
    android:background="@drawable/whitebuttonroundedcorner">

  <LinearLayout
      android:layout_width="0dp"
      android:layout_weight="3.5"
      android:layout_marginLeft="4dp"
      android:layout_height="wrap_content"
      android:orientation="vertical">
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@android:color/black"
    android:text="Membership 1 - Sell 3 items"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="$29.90"
          android:textColor="@color/blue_shade"/>
  </LinearLayout>



    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="25dp"

        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upgrade"
            android:background="@drawable/yellowbuttonwithgreenborder"/>
    </LinearLayout>
</LinearLayout>





</LinearLayout>