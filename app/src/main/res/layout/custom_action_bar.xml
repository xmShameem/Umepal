<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/custom_action_bar_height"
    android:background="@color/HeaderRed"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="10"
    android:id="@+id/custom_action_bar">

    <LinearLayout
        android:id="@+id/menu_icon_with_app_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_action_bar_height"
        android:layout_weight="4"
        android:gravity="left"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="@dimen/menu_selection_icon_dimen"
            android:layout_height="@dimen/menu_selection_icon_dimen"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/menu_selection_icon_margin"
            android:src="@drawable/menu_icon_edited" />

        <LinearLayout
            android:id="@+id/menu_icon_with_notification_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:visibility="invisible" >
        </LinearLayout>

        <ImageView
            android:id="@+id/app_image"
            android:layout_width="@dimen/app_image_dimension"
            android:layout_height="@dimen/app_image_dimension"
            android:layout_gravity="center"
            android:src="@drawable/thousanddays"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_action_bar_height"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:gravity="center" >

        <TextView
            android:id="@+id/menu_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/action_bar_heading"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_header_normal"
            android:textStyle="bold"
            android:visibility="visible"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cartLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_action_bar_height"
        android:layout_weight="4"
        android:gravity="center"
        android:visibility="visible">

        <ImageView
            android:id="@+id/add_cart_icon"
            android:layout_width="@dimen/search_icon_dimension"
            android:layout_height="@dimen/search_icon_dimension"
            android:layout_gravity="center"
            android:src="@drawable/add_to_cart"
             android:visibility="gone"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_medium"
        android:visibility="visible">

        <ImageView
            android:id="@+id/serach_item"
            android:layout_width="@dimen/search_icon_dimension"
            android:layout_height="@dimen/search_icon_dimension"
            android:layout_gravity="center"
            android:src="@drawable/searchicon"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Clear All"
            android:id="@+id/clear_all"
            android:visibility="gone"
            android:gravity="center"/>

    </LinearLayout>




</LinearLayout>