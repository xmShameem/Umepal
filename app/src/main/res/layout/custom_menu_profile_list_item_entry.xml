<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/menu_background_selector"
    android:orientation="vertical"
    android:id="@+id/layoutBackground" >

    <LinearLayout
        android:id="@+id/home_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_items_height"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:gravity="center|left"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/home_menu_icon"
            android:layout_width="@dimen/menu_item_image"
            android:layout_height="@dimen/menu_item_image"
            android:layout_margin="@dimen/margin_small"
            android:src="@drawable/home" 
            android:visibility="gone"/>

        <TextView
            android:id="@+id/home_menu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:textColor="@color/menu_text_colour_white"
            android:textSize="@dimen/textSize_large_dp" />
        
        <TextView
            android:id="@+id/notificationcount"
            android:layout_width="@dimen/product_details_padding"
            android:layout_height="@dimen/product_details_imageicon"
            android:layout_margin="@dimen/margin_small"
            android:text="0"
            android:gravity="center"
            android:textColor="@color/blue_shade"
            android:visibility="visible"
            android:background="@drawable/white_background"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:background="@color/view_colour_blue" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:background="@color/view_colour_light_blue" />
    </LinearLayout>

</LinearLayout>